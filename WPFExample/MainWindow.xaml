<Window x:Class="WPFExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Idle Monitor - WPF" Height="123" Width="330">
    <Grid>
        <CheckBox x:Name="toggleMonitor" Content="Turn on" HorizontalAlignment="Left" Margin="249,38,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.191,0.375" Checked="toggleMonitor_Checked"/>
        <Label Content="secs" HorizontalAlignment="Left" Margin="206,33,0,0" VerticalAlignment="Top" Height="24"/>
        <ComboBox Name="monitors" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="146" BorderThickness="2" BorderBrush="#FFF7EDED"/>
        <Label Content="Idle Monitor type:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="146"/>
        <TextBox Name="timeout" HorizontalAlignment="Left" Height="23" Margin="161,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40"/>

    </Grid>
</Window>
